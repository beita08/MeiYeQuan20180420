<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_banner"
        android:layout_width="match_parent"
        android:layout_height="182dp">
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/ll_point_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/vp_banner"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:padding="10dp">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vp_banner"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_class_course"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/curr_classification"
            android:gravity="center"
            android:text="分类"
            android:textColor="#3C3C3C"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_class_lecturer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/lecturer"
            android:gravity="center"
            android:text="讲师"
            android:textColor="#3C3C3C"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_class_member"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/member"
            android:gravity="center"
            android:text="会员"
            android:textColor="#3C3C3C"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_class_ranking_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ranking_list"
            android:gravity="center"
            android:text="排行榜"
            android:textColor="#3C3C3C"
            android:textSize="15sp"/>

    </LinearLayout>

</RelativeLayout>