<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xasfemr.meiyaya.activity.MyGoldRechargeActivity">

    <include layout="@layout/layout_top_bar"/>

    <include layout="@layout/layout_match_line_10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_get_cash_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:src="@drawable/get_cash_wechat"/>

        <TextView
            android:id="@+id/tv_get_cash_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_get_cash_icon"
            android:text="微信"
            android:textColor="@color/FF3C3C3C"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_get_cash_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_get_cash_type"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/iv_get_cash_icon"
            android:text="微信提现"
            android:textColor="@color/FF3C3C3C"
            android:textSize="15sp"/>
    </RelativeLayout>

    <include layout="@layout/layout_line_1dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="提现金额"
        android:textColor="@color/FF3C3C3C"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="50dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/FF3C3C3C"
            android:textSize="45sp"/>

        <EditText
            android:id="@+id/et_get_cash_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:hint="0.00"
            android:maxLength="7"
            android:inputType="numberDecimal"
            android:textColor="@color/FF3C3C3C"
            android:textColorHint="@color/FFB9B9B9"
            android:textSize="45sp"/>
    </LinearLayout>

    <include layout="@layout/layout_line_1dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_get_cash_sum_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额: ￥00.00"
            android:textColor="@color/FF696969"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawableLeft="@drawable/prompt"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="大于50元才能提现哦~"
            android:textColor="#EB4F6F"
            android:textSize="13sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_get_cash_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/selector_button_def_red"
        android:gravity="center"
        android:padding="8dp"
        android:text="确认"
        android:textColor="@color/selector_button_text_def_white"
        android:textSize="16sp"/>
</LinearLayout>

