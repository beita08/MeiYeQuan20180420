<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--android:background="#000000"-->

    <com.netease.vcloud.video.render.NeteaseView
        android:id="@+id/videoview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:id="@+id/layout_live_stream_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/live_user_bg2">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_live_user_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/meiyaya_logo_round_gray"/>

            <TextView
                android:id="@+id/tv_live_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@id/civ_live_user_icon"
                android:textColor="@color/globalWhite"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/tv_live_looker_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@id/civ_live_user_icon"
                android:textColor="@color/globalWhite"
                android:textSize="10sp"
                android:visibility="visible"/>


        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_live_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/live_close"/>

        <TextView
            android:id="@+id/tv_live_home_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:layout_toStartOf="@id/iv_live_close"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/live_home_gold"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/globalWhite"
            android:textSize="15sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/live_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/live_net_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/info"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/live_flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/flashstart"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/live_speed_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/speed"
            android:visibility="gone"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_live_beauty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="90dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="滤    镜"
                android:textColor="@color/globalRed"
                android:textSize="18sp"/>

            <SeekBar
                android:id="@+id/live_filter_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:max="100"
                android:thumb="@drawable/circle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="磨    皮"
                android:textColor="@color/globalRed"
                android:textSize="18sp"/>

            <SeekBar
                android:id="@+id/live_beauty_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:max="100"
                android:thumb="@drawable/circle"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="曝光度"
                android:textColor="@color/globalRed"
                android:textSize="18sp"/>

            <SeekBar
                android:id="@+id/live_Exposure_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:max="100"
                android:progress="50"
                android:thumb="@drawable/circle"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/live_start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/live_btn_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/live_camera_change"
        android:src="@drawable/restart"
        android:visibility="gone"/>

    <com.xasfemr.meiyaya.weight.GiftItemView
        android:id="@+id/gift_item_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clipChildren="true">
    </com.xasfemr.meiyaya.weight.GiftItemView>

    <ListView
        android:id="@+id/list_message"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="10dp"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:scrollbars="none"
        android:transcriptMode="alwaysScroll"/>

    <!--<include layout="@layout/layout_send_message"/>-->

    <LinearLayout
        android:id="@+id/live_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:gravity="right"
        android:orientation="horizontal">

        <!--美颜-->
        <ImageView
            android:id="@+id/iv_live_room_beauty"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:padding="4dp"
            android:src="@drawable/live_room_beauty"
            android:visibility="visible"/>

        <!--线性布局中占位置-->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <!--相机反转-->
        <ImageView
            android:id="@+id/live_camera_btn"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:padding="4dp"
            android:src="@drawable/camera_rollover2"
            android:visibility="visible"/>

        <!--直播简介-->
        <ImageView
            android:id="@+id/iv_live_room_brief_introduction"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:padding="4dp"
            android:src="@drawable/live_room_brief_introduction"
            android:visibility="visible"/>

        <!--分享直播间-->
        <ImageView
            android:id="@+id/iv_live_room_share"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:padding="4dp"
            android:src="@drawable/live_room_share"
            android:visibility="visible"/>

        <!--截图-->
        <ImageView
            android:id="@+id/live_capture_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/capture"
            android:visibility="gone"/>

        <!--滤镜-->
        <ImageView
            android:id="@+id/live_filter_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/filter"
            android:visibility="gone"/>

        <!--伴奏音乐-->
        <ImageView
            android:id="@+id/live_music_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/music"
            android:visibility="gone"/>

        <!--推流及水印设置-->
        <ImageView
            android:id="@+id/live_config_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/config"
            android:visibility="gone"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/live_camera_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/live_btn_layout"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/change"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/text_fps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/live_title_layout"
        android:paddingRight="20dp"
        android:textColor="#008000"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/speedResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#008000"/>

    <LinearLayout
        android:id="@+id/filter_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/brooklyn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="怀旧"/>

        <Button
            android:id="@+id/clean"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="干净"/>

        <Button
            android:id="@+id/nature"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="自然"/>

        <Button
            android:id="@+id/healthy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="健康"/>

        <Button
            android:id="@+id/pixar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="复古"/>

        <Button
            android:id="@+id/tender"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="温柔"/>

        <Button
            android:id="@+id/whiten"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="美白"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/live_config_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/text_title_small"
                    android:background="@color/title_grey"
                    android:text="预览镜像"/>

                <RadioGroup
                    android:id="@+id/live_config_preview_mirror"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    >

                    <RadioButton
                        android:id="@+id/live_config_preview_mirror_on"
                        style="@style/radio_button"
                        android:checked="true"
                        android:text="开"/>

                    <RadioButton
                        android:id="@+id/live_config_preview_mirror_off"
                        style="@style/radio_button"
                        android:text="关"/>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/text_title_small"
                    android:layout_gravity="center"
                    android:background="@color/title_grey"
                    android:text="推流镜像"/>

                <RadioGroup
                    android:id="@+id/live_config_push_mirror"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    >

                    <RadioButton
                        android:id="@+id/live_config_push_mirror_on"
                        style="@style/radio_button"
                        android:text="开"
                        />

                    <RadioButton
                        android:id="@+id/live_config_push_mirror_off"
                        style="@style/radio_button"
                        android:checked="true"
                        android:text="关"/>
                </RadioGroup>

            </LinearLayout>

        </LinearLayout>


        <!-- 水印开关 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/text_title_small"
                    android:background="@color/title_grey"
                    android:text="本地水印"/>

                <RadioGroup
                    android:id="@+id/live_config_water"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    >

                    <RadioButton
                        android:id="@+id/live_config_water_on"
                        style="@style/radio_button"
                        android:checked="true"
                        android:text="开"/>

                    <RadioButton
                        android:id="@+id/live_config_water_off"
                        style="@style/radio_button"
                        android:text="关"/>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/text_title_small"
                    android:layout_gravity="center"
                    android:background="@color/title_grey"
                    android:text="本地涂鸦"/>

                <RadioGroup
                    android:id="@+id/live_config_graffiti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    >

                    <RadioButton
                        android:id="@+id/live_config_graffiti_on"
                        style="@style/radio_button"
                        android:checked="true"
                        android:text="开"/>

                    <RadioButton
                        android:id="@+id/live_config_graffiti_off"
                        style="@style/radio_button"
                        android:text="关"/>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/text_title_small"
                    android:layout_gravity="center"
                    android:background="@color/title_grey"
                    android:text="动态水印"/>

                <RadioGroup
                    android:id="@+id/live_config_dynamicWater"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    >

                    <RadioButton
                        android:id="@+id/live_config_dynamicWater_on"
                        style="@style/radio_button"
                        android:checked="true"
                        android:text="开"/>

                    <RadioButton
                        android:id="@+id/live_config_dynamicWater_off"
                        style="@style/radio_button"
                        android:text="关"/>
                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>