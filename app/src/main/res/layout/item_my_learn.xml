<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@drawable/selector_recyclerview_press_bg"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_learn_img"
            android:layout_width="98dp"
            android:layout_height="65dp"
            android:layout_marginEnd="10dp"
            android:background="@color/FFF3F3F3"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_learn_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_learn_img"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="@color/globalblack"
            android:textSize="14sp"
            tools:text="我的学习我的学习我的学习"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/iv_learn_img">

            <TextView
                android:id="@+id/tv_learn_free_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="限时免费"
                android:textColor="@color/FFB9B9B9"
                android:textSize="12sp"/>

            <ImageView
                android:id="@+id/iv_learn_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/continue_learn"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="#F0EDED"/>
</LinearLayout>











