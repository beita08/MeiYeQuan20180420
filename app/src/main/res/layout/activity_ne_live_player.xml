        <LinearLayout
            android:id="@+id/buffering_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:text="@string/buffering"
                android:textColor="#FFFFFFFF"
                android:textSize="13dp"/>

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Large"
                android:layout_width="50dip"
                android:layout_height="50dip"/>
        </LinearLayout>

        <com.xasfemr.meiyaya.weight.GiftItemView
            android:id="@+id/gift_item_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clipChildren="true">

        </com.xasfemr.meiyaya.weight.GiftItemView>

        <ListView
            android:id="@+id/list_message"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="120dp"
            android:divider="@null"
            android:dividerHeight="5dp"
            android:scrollbars="none"
            android:stackFromBottom="true"
            android:transcriptMode="alwaysScroll"/>
        <include layout="@layout/layout_send_message"/>

        <RelativeLayout
            android:id="@+id/gift_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp">


            <ImageView
                android:id="@+id/iv_live_room_brief_introduction"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:padding="4dp"
                android:src="@drawable/live_player_message"/>


            <ImageView
                android:id="@+id/iv_live_room_share"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:padding="4dp"
                android:src="@drawable/live_room_share"/>

            <ImageView

                android:id="@+id/ivSummary"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_toStartOf="@id/iv_live_room_share"
                android:padding="3dp"
                android:src="@drawable/live_room_brief_introduction"/>

            <ImageView
                android:id="@+id/iv_live_room_gold_send"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/ivSummary"
                android:padding="4dp"
                android:src="@drawable/live_room_gold_send"/>
        </RelativeLayout>

            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/live_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ProgressBar
            android:id="@+id/loading_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/myProgressBar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="加载中..."
            android:textColor="@color/FF3C3C3C"
            android:textSize="14sp"/>
    </LinearLayout>
</FrameLayout>