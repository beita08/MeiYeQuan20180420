<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xasfemr.meiyaya.activity.LiveCreateActivity">

    <include layout="@layout/layout_top_bar"/>

    <EditText
        android:id="@+id/et_current_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_input"
        android:hint="当前密码"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/FF3C3C3C"
        android:textColorHint="@color/FFB9B9B9"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/et_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_input"
        android:hint="新密码"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/FF3C3C3C"
        android:textColorHint="@color/FFB9B9B9"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/et_new_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_input"
        android:hint="确认新密码"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/FF3C3C3C"
        android:textColorHint="@color/FFB9B9B9"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/btn_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/selector_button_def_red"
        android:gravity="center"
        android:text="确认提交"
        android:textColor="@color/selector_button_text_def_white"
        android:textSize="16sp"/>
</LinearLayout>