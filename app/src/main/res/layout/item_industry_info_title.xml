<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/text_15dp"
        android:paddingStart="@dimen/text_15dp"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_industry_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/textcolor_17070A"
            android:textSize="@dimen/text_16dp"
            android:text="美业资讯"/>

        <TextView
            android:id="@+id/tv_industry_info_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/more_arrow_grey"
            android:drawablePadding="3dp"
            android:text="更多"
            android:textSize="@dimen/text_14dp"/>

    </LinearLayout>

</LinearLayout>


