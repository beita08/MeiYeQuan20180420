<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_recyclerview_press_bg"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_gold_detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/FF3C3C3C"
            android:textSize="15sp"
            tools:text="充值"/>

        <TextView
            android:id="@+id/tv_gold_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_gold_detail_type"
            android:layout_marginTop="5dp"
            android:textColor="@color/FFB9B9B9"
            android:textSize="13sp"
            tools:text="2017年9月27日17:49:22"/>

        <TextView
            android:id="@+id/tv_gold_money_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/globalRed"
            android:textSize="15sp"
            tools:text="+300.00"/>
    </RelativeLayout>

    <include layout="@layout/layout_line_1dp"/>

</LinearLayout>