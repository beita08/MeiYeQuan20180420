<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_empty_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/globalWhite"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/no_data_loading_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/null_data_learn"/>

    <TextView
        android:id="@+id/netEmptyTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="30dp"
        android:text="您还没有学习课程哦~"
        android:textColor="@color/FFB9B9B9"
        android:textSize="15dp"/>
</LinearLayout>

