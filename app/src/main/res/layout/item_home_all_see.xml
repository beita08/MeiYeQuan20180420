<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white">

<LinearLayout
    android:id="@+id/layoutItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/text_10dp"
    android:paddingBottom="@dimen/text_10dp"
    android:paddingLeft="@dimen/text_15dp"
    android:paddingRight="@dimen/text_15dp">

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@color/textcolor_f3f3f3"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/text_20dp"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="双飞一次"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/textcolor_3c3c3c"
                android:textSize="@dimen/text_14dp"/>

            <ImageView
                android:id="@+id/imgApprove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_approeve"
                android:layout_marginLeft="@dimen/text_5dp"
                android:visibility="gone"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="老孙家男士大保健"
            android:textColor="@color/textcolor_9e9e9e"
            android:textSize="@dimen/text_12dp"
            android:layout_marginTop="@dimen/text_10dp"
            android:lines="1"
            android:ellipsize="end"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginTop="@dimen/text_15dp"
            >

            <LinearLayout
                android:id="@+id/distanceGone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/text_5dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.3km"
                    android:textColor="@color/textcolor_9e9e9e"
                    android:textSize="@dimen/text_12dp"
                    android:ellipsize="end"
                    android:visibility="gone"/>


                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.3km"
                    android:textColor="@color/textcolor_9e9e9e"
                    android:textSize="@dimen/text_12dp"
                    android:drawableLeft="@drawable/item_all_see_map"
                    android:drawablePadding="@dimen/text_5dp"
                    android:ellipsize="end"
                    />


                <View
                    android:layout_width="@dimen/text_1dp"
                    android:layout_height="@dimen/text_10dp"
                    android:background="@color/textcolor_e5e5e5"
                    android:layout_marginLeft="@dimen/text_5dp"/>
            </LinearLayout>


            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中投国际"
                android:textColor="@color/textcolor_9e9e9e"
                android:textSize="@dimen/text_12dp"
                android:lines="1"
                android:ellipsize="end"
             />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="价格面议"
        android:textColor="@color/textcolor_ef4f6f"
        android:textSize="@dimen/text_14dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/text_20dp"/>

</LinearLayout>


</LinearLayout>