<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_collect_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3F3F3"
        android:drawableLeft="@drawable/time_clock"
        android:drawablePadding="5dp"
        android:paddingBottom="8dp"
        android:paddingStart="10dp"
        android:paddingTop="8dp"
        android:textColor="@color/FFB9B9B9"
        android:textSize="13sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_collect_edit_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/edit_tag_unselected"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_collect_cover"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_toRightOf="@id/iv_collect_edit_tag"
            android:scaleType="center"
            android:background="@drawable/clhk"
            android:src="@drawable/live_mark"/>

        <TextView
            android:id="@+id/tv_collect_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_collect_cover"
            android:text="美页圈"
            android:textColor="@color/FF3C3C3C"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_collect_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/iv_collect_cover"
            android:text="美丽的容颜美丽的容颜美丽的容颜美丽美丽的容颜"
            android:textColor="@color/FF3C3C3C"
            android:textSize="15sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#F3F3F3"/>

</LinearLayout>