<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.xasfemr.meiyaya.activity.MyGoldActivity">

    <include layout="@layout/layout_top_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F3F3F3"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/gold_wallet"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_my_gold_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/FF3C3C3C"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="金币"
            android:textColor="@color/FF3C3C3C"
            android:textSize="20sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/gold_gold_flag"
            android:drawablePadding="5dp"
            android:text="10金币="
            android:textColor="@color/globalRed"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:drawableLeft="@drawable/gold_money_flag"
            android:drawablePadding="5dp"
            android:text="1元"
            android:textColor="@color/globalRed"
            android:textSize="20sp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_my_gold_recharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/selector_button_def_red"
        android:gravity="center"
        android:padding="8dp"
        android:text="充值"
        android:textColor="@color/selector_button_text_def_white"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/tv_my_gold_get_cash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_button_def_white"
        android:gravity="center"
        android:padding="8dp"
        android:text="提现"
        android:textColor="@color/selector_button_text_def_red"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/tv_my_gold_no_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="只有讲师可提现~"
        android:textColor="@color/FFB9B9B9"
        android:textSize="13sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></LinearLayout>

    <TextView
        android:id="@+id/tv_my_gold_about_gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:drawableEnd="@drawable/gold_question_mark_gray"
        android:drawablePadding="3dp"
        android:padding="10dp"
        android:text="关于金币"
        android:textColor="@color/FFB9B9B9"
        android:textSize="14sp"/>
</LinearLayout>