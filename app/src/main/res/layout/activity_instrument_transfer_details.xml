<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/layout_top_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/rootLayout">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/text_10dp"
                    android:paddingLeft="@dimen/text_15dp"
                    android:paddingRight="@dimen/text_15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/text_15dp">

                        <TextView
                            android:id="@+id/tvTitleDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="美容导师"
                            android:textSize="@dimen/text_16dp"
                            android:layout_weight="1"
                            android:textColor="@color/textcolor_17070A"/>

                        <TextView
                            android:id="@+id/tvScanNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="浏览232"
                            android:textSize="@dimen/text_12dp"
                            android:textColor="@color/textcolor_9e9e9e"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/text_15dp">

                        <TextView
                            android:text="价格："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_14dp"
                            android:textColor="@color/textcolor_9e9e9e"/>
                        <TextView
                            android:id="@+id/tvSalary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_16dp"
                            android:textColor="@color/textcolor_ef4f6f"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_14dp"
                            android:text="运费："
                            android:textColor="@color/textcolor_9e9e9e"
                            android:layout_marginLeft="@dimen/text_20dp"
                            />
                        <TextView
                            android:id="@+id/tvPostage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_16dp"
                            android:textColor="@color/textcolor_9e9e9e"

                       />

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_1dp"
                        android:background="@color/background"
                        android:layout_marginTop="@dimen/text_15dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/text_10dp"
                        android:paddingBottom="@dimen/text_10dp"
                        android:gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@color/textcolor_f3f3f3"/>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/text_20dp"
                            android:layout_weight="1">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/tvCompanyNme"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="双飞一次"
                                    android:lines="1"
                                    android:ellipsize="end"
                                    android:textColor="@color/textcolor_3c3c3c"
                                    android:textSize="@dimen/text_14dp"/>

                                <ImageView
                                    android:id="@+id/imgApprove"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/icon_approeve"
                                    android:layout_marginLeft="@dimen/text_5dp"
                                    android:visibility="gone"/>
                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/tvName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="姓名"
                                    android:textColor="@color/textcolor_9e9e9e"
                                    android:textSize="@dimen/text_12dp"
                                    android:layout_marginTop="@dimen/text_10dp"
                                    android:lines="1"
                                    android:ellipsize="end"/>
                                <TextView
                                    android:id="@+id/tvPhone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="电话"
                                    android:drawableLeft="@drawable/icon_phone"
                                    android:drawablePadding="@dimen/text_5dp"
                                    android:textColor="@color/textcolor_9e9e9e"
                                    android:textSize="@dimen/text_12dp"
                                    android:layout_marginTop="@dimen/text_10dp"
                                    android:lines="1"
                                    android:ellipsize="end"
                                    android:layout_marginLeft="@dimen/text_20dp"/>
                            </LinearLayout>


                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/text_10dp"
                    android:paddingLeft="@dimen/text_15dp"
                    android:paddingRight="@dimen/text_15dp"
                    android:paddingBottom="@dimen/text_15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品详情"
                        android:textColor="@color/textcolor_3c3c3c"
                        android:textSize="@dimen/text_14dp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/text_15dp"/>


                    <TextView
                        android:id="@+id/tvDetailContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="text"
                        android:textColor="@color/textcolor_3c3c3c"
                        android:textSize="@dimen/text_14dp"
                        android:layout_marginTop="@dimen/text_14dp"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/text_10dp"
                    android:paddingLeft="@dimen/text_15dp"
                    android:paddingRight="@dimen/text_15dp"
                    android:paddingBottom="@dimen/text_15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品展示"
                        android:textColor="@color/textcolor_3c3c3c"
                        android:textSize="@dimen/text_14dp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/text_15dp"/>


                    <com.xasfemr.meiyaya.view.NoScrollNoDividerListView

                        android:id="@+id/lvImages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@null"
                        android:layout_marginTop="@dimen/text_15dp">

                    </com.xasfemr.meiyaya.view.NoScrollNoDividerListView>


                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>



</LinearLayout>